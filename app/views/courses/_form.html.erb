<%= render "layouts/error_messages", resource: course %>
<%= form_with model: [current_user, course], local: true do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :introduction %>
  <%= f.text_area :introduction %><br>

  <%= f.label :departure %>
  <%= f.datetime_field :departure, value: (course.departure || Time.current).strftime("%Y-%m-%dT%H:%M") %><br>


  <%= f.check_box :avoid_highways, {} , true, false %>
  <%= f.label :avoid_highways, "高速道路を使わない" %><br>
  <%= f.check_box :avoid_tolls, {} , true, false %>
  <%= f.label :avoid_tolls, "有料道路を使わない" %><br>

  <%= f.hidden_field :spots, value: course.spots.to_json(only: [:sort_number, :name, :latitude, :longitude, :address]) %>

  <%= f.submit %>
<% end %>