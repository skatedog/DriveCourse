<h2>map</h2>
<div id='map'></div>
<style>
#map{
  height: 400px;
}
</style>

<script>
let spotsInfo = [];
<% spots.each do |spot| %>
	spotsInfo.push({
		id: "<%= spot.id %>",
		lat: "<%= spot.place.latitude %>",
		lng: "<%= spot.place.longitude %>",
		sortNumber: "<%= spot.sort_number %>",
		stopover: "<%= spot.stopover %>",
	});
<% end %>

callback = "initEditableCourseMap";

let script = document.createElement('script');
script.src = "https://maps.googleapis.com/maps/api/js?key=<%= ENV["GOOGLE_MAPS_API_KEY"] %>&callback=" + callback;
script.async = true;
script.defer = true;
document.body.appendChild(script);

</script>