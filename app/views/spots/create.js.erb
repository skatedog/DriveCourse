spotsInfo.forEach((spot) => {
  if (spot.sortNumber >= index) {
    spot.sortNumber ++;
  }
});
spotsInfo.push({
	id: "<%= @spot.id %>",
	lat: "<%= @spot.place.latitude %>",
	lng: "<%= @spot.place.longitude %>",
	sortNumber: "<%= @spot.sort_number %>",
	stopover: "<%= @spot.stopover %>",
});
sortSpotList(spotsInfo);

$(() => {
	$(".spot-list__list").children().eq(index).replaceWith("<%= j(render 'spots/record', spot: @spot) %>");
	$(".spot-list__list").children().eq(index).addClass("ui-sortable-handle");
});