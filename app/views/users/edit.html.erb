<h1>Users#edit</h1>
<%= render "users/shared/error_messages", resource: @user %>
<%= form_with model:@user, local: true do |f| %>
  <%= f.label :user_image %>
  <%= f.file_field :user_image %><br>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :email %>
  <%= f.text_field :email %><br>
  <%= f.label :introduction %>
  <%= f.text_area :introduction %><br>
  <%= f.submit %>
<% end %>
<%= link_to "退会する", user_registration_path, method: :delete, data: { confirm: "本当に退会しますか？" } %>