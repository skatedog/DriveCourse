<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form" }) do |f| %>
  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form__field", placeholder: "メールアドレス" %>
  <%= f.password_field :password, autocomplete: "current-password", class: "form__field", placeholder: "パスワード" %>
  <div class="form__group form__group--none">
    <% if devise_mapping.rememberable? %>
      <div class="form__check form__check">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
  </div>
  <%= f.submit "ログイン", class: "form__button" %>
<% end %>

<%= render "users/shared/links" %>